gui gamepause
{
    rectangle
    {
        alpha: .8
    }

    text "Game pause"
    {
        posx: .width/2 - @text.width + 230
        posy: .height/4.5

        fill: white
        outline: red
        thickness: 2
        size: 96
    }
}



gui dialogue
{
    rectangle as Dialogue
    {
        alpha: .66

        left: 30
        right: 30
        bottom: 10
        height: ".height/5 - 10"

        rectangle as Name
        {
            maxAlpha: .66

            left: 10
            bottom: .height + 5
            width: @name.width + 20
            height: @name.height + 10
        }
    }
}


//или просто dialogue {
gui sdialogue
{
    //глобальные задания переменных на данный скоп
    font: "NotoSansCJK-Regular.ttc"
    characterSize: 30

    rectangle {
        color black
        alpha: 170

        left: 30
        right: 30
        bottom: 10
        height: ".height/5 - 10"

        text @dialogue {
            left: 10
            top: 10
            width: .width - 20

            font: "NotoSansCJK-Regular.ttc"
            size: 30
        }

        rectangle as Name {
            color: black
            maxAlpha: 170

            left: 10
            bottom: .height + 5
            width: @name.width + 20
            height: @name.height + 10

            fadings as nameRect

            text @name {
                left: 5
                top: 5
                width: .width - 20

                font: "NotoSansCJK-Regular.ttc"
                size: 30
            }
        }
    }
}
