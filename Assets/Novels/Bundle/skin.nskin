name "Default"

font: "Pacifica.ttf"

dialogue
{
    appearTime: 0.6
    disappearTime: 0.6
    alpha: 1.

    insecond: 0.03
    mode: insecond

    font: "NotoSansCJK-Regular.ttc"
    size: 30
}

background
{
    appearTime: 0.6
    disappearTime: 0.6
    alpha: 1.
}

character
{
    appearTime: 0.6
    disappearTime: 0.6
    alpha: 1.
}

music
{
    appearTime: 1
    disappearTime: 1
    volume 100
}

ambient
{
    appearTime: 1
    disappearTime: 1
    volume 100
}

sound
{
    appearTime: 0
    disappearTime: 0
    volume 100
}




